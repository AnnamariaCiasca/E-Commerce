<h1>Create New Product</h1>

<div class="row">
    <div class="col-3"></div>
    <form class="col-lg-6 col-md-6 col-sm-12" asp-controller="Products" asp-action="Create" method="post">

        <partial name="_Form" model="Model" />

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" style="text-align:center"/>

            <a class="btn btn-primary" asp-controller="Products" asp-action="Index" role="button">Cancel</a>

            <input type="reset" value="Reset" class="=btn btn-primary"  />
        </div>
    </form>

</div>

